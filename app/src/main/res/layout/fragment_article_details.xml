<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".api.article_details.ArticleDetailsFragment"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/article_back_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/article_thumbnail_imageview"
        app:layout_constraintTop_toTopOf="@id/article_thumbnail_imageview"
        android:src="@drawable/ic_back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/article_favorite_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/article_thumbnail_imageview"
        app:layout_constraintTop_toTopOf="@id/article_thumbnail_imageview"
        android:src="@drawable/ic_favorite"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/article_thumbnail_imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/article_headline_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Lorem ipsum thing"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/article_thumbnail_imageview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing Lorem ipsum thing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/article_headline_textview"/>
</androidx.constraintlayout.widget.ConstraintLayout>